extends layout

block content
  h1= 'home'
  if modelData
    form(action="/checkName" method="get")
      p Welcome to #{title}
      div
        input(type="text" name="username" placeholder="用户名")
      input(type="submit" value="click to log")
    div name : #{modelData}
    div password : #{password}
    div gender : #{gender}
    div bio : #{bio}
    - var url = avatar
    div
      span avatar :
      img(src=url)
    div create_date : #{create_date}
  else
    p Welcome to #{title}

  a(class='button' href='/search') 查询